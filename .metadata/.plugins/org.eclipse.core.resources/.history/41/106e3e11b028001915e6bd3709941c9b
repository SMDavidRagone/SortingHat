
public class BubbleSort extends PapaSort
{
	public BubbleSort(int [] l)
	{
		super(l);
	}
	
	private boolean bubbleIt(int end)
	{
		boolean didSwap = false;
		//for(int j = 0; j < end; j++)
		
		
			for(int i = 0; i < (end); i++)
			{
				int j = i+1;
				if(super.getElement(i) > super.getElement(j))
				{
					swap(i, j);
					didSwap = true;
				}
			}
		
		return didSwap;
	}
	
	@Override
	public void executeAlgorithm()
	{
		boolean notDone = true;
		int bubbleEnd = super.getList().length-1;
		do {
			notDone = bubbleIt(bubbleEnd);
			if(notDone)
			{
				bubbleEnd -= 1;
			}
			System.out.println(this);
		} while(notDone && bubbleEnd >= 1);
		
		
		bubbleIt(super.getList().length-1);
		
		
		
		
		
	}
	
}
